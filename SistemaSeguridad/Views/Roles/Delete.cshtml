@model SistemaSeguridad.Models.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "Eliminar rol";
    var isAdmin = Model?.Name != null && Model.Name.Equals("Administrador", StringComparison.OrdinalIgnoreCase);
}

<div class="mx-auto max-w-2xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Eliminar rol</h1>
        <p class="mt-1 text-sm text-slate-600">Esta acción no se puede deshacer.</p>
    </div>

    @if (isAdmin)
    {
        <div class="mb-4 rounded-2xl border border-indigo-200 bg-indigo-50 px-4 py-3 text-sm text-indigo-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-shield-lock"></i>
                <span>El rol <strong>Administrador</strong> es protegido y no debe eliminarse.</span>
            </div>
        </div>
    }

    <div class="rounded-2xl border border-rose-200 bg-white shadow-sm">
        <div class="border-b border-rose-200 bg-rose-50 px-6 py-4">
            <p class="text-sm font-semibold text-rose-800">Confirmación</p>
        </div>

        <div class="p-6">
            <p class="text-sm text-slate-700">
                ¿Seguro que deseas eliminar el rol <strong>@Model.Name</strong>?
            </p>

            @if (Model.UsersCount > 0)
            {
                <div class="mt-4 rounded-xl border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-800">
                    <div class="flex items-center gap-2">
                        <i class="bi bi-exclamation-triangle"></i>
                        <span>Este rol tiene usuarios asignados. No se recomienda eliminarlo.</span>
                    </div>
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-6 flex items-center justify-end gap-2">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index"
                   class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                    Cancelar
                </a>

                <button type="submit"
                        class="rounded-xl bg-rose-600 px-4 py-2 text-sm font-semibold text-white hover:bg-rose-700">
                    Eliminar
                </button>
            </form>
        </div>
    </div>
</div>
