@model SistemaSeguridad.Models.ViewModels.ManageRolePermissionsViewModel
@{
    ViewData["Title"] = "Permisos del rol";
    var isAdminRole = Model.RoleName != null && Model.RoleName.Equals("Administrador", StringComparison.OrdinalIgnoreCase);

    // 🔁 Solo para mostrar bonito en UI
    string Pretty(string value)
    {
        if (string.IsNullOrWhiteSpace(value)) return value;

        // Cambia solo la etiqueta visual
        return value
            .Replace("Productos.", "Repuestos.")
            .Replace("Productos_", "Repuestos_");
    }
}

<div class="mx-auto max-w-6xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Permisos del rol</h1>
        <p class="mt-1 text-sm text-slate-600">
            Rol: <span class="font-semibold text-slate-900">@Model.RoleName</span>
        </p>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-exclamation-triangle"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-check2-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        </div>
    }

    @if (isAdminRole)
    {
        <div class="mb-4 rounded-2xl border border-indigo-200 bg-indigo-50 px-4 py-3 text-sm text-indigo-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-shield-lock"></i>
                <span>El rol Administrador es protegido: no se permite quitar permisos.</span>
            </div>
        </div>
    }

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <p class="text-sm font-semibold text-slate-800">
                <i class="bi bi-key me-1"></i> Permisos
            </p>
        </div>

        <form asp-action="ManagePermissions" method="post">
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="RoleName" />

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-white">
                        <tr class="text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                            <th class="px-6 py-3">Permiso</th>
                            <th class="px-6 py-3 text-center">Asignado</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-200 bg-white">
                        @for (int i = 0; i < Model.Permissions.Count; i++)
                        {
                            var rawName = Model.Permissions[i].Name;
                            var rawDisplay = Model.Permissions[i].DisplayName;

                            // visual
                            var uiName = Pretty(rawName);
                            var uiDisplay = Pretty(rawDisplay);

                            <tr class="hover:bg-slate-50">
                                <td class="px-6 py-4">
                                    <div class="font-semibold text-slate-900">@uiName</div>
                                    <div class="mt-0.5 text-xs text-slate-500">@uiDisplay</div>

                                    <!-- 🔒 Mantener valores reales -->
                                    <input type="hidden" asp-for="Permissions[@i].Name" />
                                    <input type="hidden" asp-for="Permissions[@i].DisplayName" />
                                </td>

                                <td class="px-6 py-4 text-center">
                                    <input class="h-4 w-4 rounded border-slate-300 text-cyan-600 focus:ring-cyan-200"
                                           asp-for="Permissions[@i].IsSelected" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="flex items-center justify-end gap-2 border-t border-slate-200 bg-white px-6 py-4">
                <a asp-action="Index"
                   class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                    Volver
                </a>

                <button type="submit"
                        class="rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800">
                    <i class="bi bi-check2"></i> Guardar permisos
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
