@model SistemaSeguridad.Models.Producto
@{
    ViewData["Title"] = "Detalle del repuesto";
}

<div class="mx-auto max-w-2xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Detalle del repuesto</h1>
        <p class="mt-1 text-sm text-slate-600">Información completa del repuesto.</p>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <p class="text-sm font-semibold text-slate-800">Datos</p>
        </div>

        <div class="p-6">
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div class="rounded-xl border border-slate-200 bg-white p-4">
                    <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Html.DisplayNameFor(m => m.Nombre)</dt>
                    <dd class="mt-1 text-sm font-semibold text-slate-900">@Model.Nombre</dd>
                </div>

                <div class="rounded-xl border border-slate-200 bg-white p-4">
                    <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Html.DisplayNameFor(m => m.Precio)</dt>
                    <dd class="mt-1 text-sm font-semibold text-slate-900">@Model.Precio.ToString("C")</dd>
                </div>

                <div class="rounded-xl border border-slate-200 bg-white p-4 sm:col-span-2">
                    <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Html.DisplayNameFor(m => m.Descripcion)</dt>
                    <dd class="mt-1 text-sm text-slate-700">@Model.Descripcion</dd>
                </div>

                <div class="rounded-xl border border-slate-200 bg-white p-4 sm:col-span-2">
                    <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Html.DisplayNameFor(m => m.Activo)</dt>
                    <dd class="mt-1">
                        @if (Model.Activo)
                        {
                            <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 ring-1 ring-emerald-200">
                                <i class="bi bi-check2-circle"></i> Sí
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 ring-1 ring-slate-200">
                                <i class="bi bi-x-circle"></i> No
                            </span>
                        }
                    </dd>
                </div>
            </dl>

            <div class="mt-6 flex items-center justify-end gap-2">
                <a asp-action="Index"
                   class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                    Volver
                </a>

                @if (User.HasClaim("permission", SistemaSeguridad.Security.Permissions.Productos_Editar))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="rounded-xl bg-amber-500 px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-amber-400">
                        Editar
                    </a>
                }
            </div>
        </div>
    </div>
</div>
