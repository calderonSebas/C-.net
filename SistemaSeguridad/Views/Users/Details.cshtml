@model SistemaSeguridad.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Detalles del usuario";
    var isAdmin = Model.Roles != null && Model.Roles.Any(r => r.Equals("Administrador", StringComparison.OrdinalIgnoreCase));
}

<div class="mx-auto max-w-6xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Detalles del usuario</h1>
        <p class="mt-1 text-sm text-slate-600">Información general y roles asignados.</p>
    </div>

    @if (isAdmin)
    {
        <div class="mb-4 rounded-2xl border border-indigo-200 bg-indigo-50 px-4 py-3 text-sm text-indigo-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-shield-lock"></i>
                <span>Este usuario es <strong>Administrador</strong> y está protegido.</span>
            </div>
        </div>
    }

    <div class="grid grid-cols-1 gap-4 lg:grid-cols-5">
        <div class="lg:col-span-2">
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <div class="flex items-center gap-3">
                        <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-cyan-50 ring-1 ring-cyan-200">
                            <i class="bi bi-person-circle text-cyan-700 text-lg"></i>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-slate-800">Información del usuario</p>
                            <p class="text-xs text-slate-500">Datos generales de la cuenta.</p>
                        </div>
                    </div>
                </div>

                <div class="p-6 space-y-4">
                    <div class="rounded-xl border border-slate-200 p-4">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Id</p>
                        <p class="mt-1 text-sm font-mono text-slate-900 break-all">@Model.Id</p>
                    </div>

                    <div class="rounded-xl border border-slate-200 p-4">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Correo</p>
                        <p class="mt-1 text-sm font-semibold text-slate-900">@Model.Email</p>
                    </div>

                    <div class="rounded-xl border border-slate-200 p-4">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Usuario</p>
                        <p class="mt-1 text-sm text-slate-700">@Model.UserName</p>
                    </div>

                    <div class="rounded-xl border border-slate-200 p-4">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Correo confirmado</p>
                        <div class="mt-2">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 ring-1 ring-emerald-200">
                                    <i class="bi bi-check2-circle"></i> Sí
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 ring-1 ring-slate-200">
                                    <i class="bi bi-x-circle"></i> No
                                </span>
                            }
                        </div>
                    </div>

                    <div class="rounded-xl border border-slate-200 p-4">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Bloqueado</p>
                        <div class="mt-2">
                            @if (Model.IsLockedOut)
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-rose-50 px-3 py-1 text-xs font-semibold text-rose-700 ring-1 ring-rose-200">
                                    <i class="bi bi-lock-fill"></i> Sí
                                </span>
                                <div class="mt-1 text-xs text-slate-500">
                                    Hasta: @Model.LockoutEnd?.LocalDateTime.ToString("g")
                                </div>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 ring-1 ring-emerald-200">
                                    <i class="bi bi-unlock"></i> No
                                </span>
                            }
                        </div>
                    </div>

                    <div class="flex items-center justify-end gap-2 pt-2">
                        <a asp-action="Index"
                           class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                            Volver
                        </a>

                        <a asp-action="ManageRoles" asp-route-id="@Model.Id"
                           class="rounded-xl px-4 py-2 text-sm font-semibold shadow-sm
                                 @(isAdmin ? "bg-slate-200 text-slate-500 pointer-events-none" : "bg-cyan-600 text-white hover:bg-cyan-700")">
                            <i class="bi bi-shield-lock me-1"></i> Gestionar roles
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-3">
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-800">
                        <i class="bi bi-shield-check me-1"></i> Roles asignados
                    </p>
                </div>

                <div class="p-6">
                    @if (Model.Roles == null || !Model.Roles.Any())
                    {
                        <div class="py-8 text-center">
                            <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-2xl bg-slate-100">
                                <i class="bi bi-shield-slash text-slate-500 text-xl"></i>
                            </div>
                            <p class="text-sm text-slate-600">Este usuario no tiene roles asignados.</p>
                        </div>
                    }
                    else
                    {
                        <div class="flex flex-wrap gap-2">
                            @foreach (var role in Model.Roles)
                            {
                                var rAdmin = role.Equals("Administrador", StringComparison.OrdinalIgnoreCase);
                                <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold ring-1
                                            @(rAdmin ? "bg-indigo-50 text-indigo-700 ring-indigo-200" : "bg-cyan-50 text-cyan-700 ring-cyan-200")">
                                    @role
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
