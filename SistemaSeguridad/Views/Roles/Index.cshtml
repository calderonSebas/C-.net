@model IEnumerable<SistemaSeguridad.Models.ViewModels.RoleViewModel>
@{
    ViewData["Title"] = "Gestión de Roles";
}

<div class="mx-auto max-w-6xl">
    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold tracking-tight text-slate-900">Gestión de Roles</h1>
            <p class="mt-1 text-sm text-slate-600">Administra roles del sistema y sus permisos.</p>
        </div>

        <a asp-action="Create"
           class="inline-flex items-center justify-center gap-2 rounded-xl bg-cyan-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-cyan-700">
            <i class="bi bi-plus-circle"></i> Crear rol
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-check2-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-exclamation-triangle"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        </div>
    }

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 bg-slate-50 px-5 py-4">
            <div class="flex items-center justify-between">
                <p class="text-sm font-semibold text-slate-800">Listado de roles</p>
                <span class="text-xs text-slate-500">@Model.Count() rol(es)</span>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="p-10 text-center">
                <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-2xl bg-slate-100">
                    <i class="bi bi-shield-x text-slate-500 text-xl"></i>
                </div>
                <p class="text-sm text-slate-600">No hay roles registrados.</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-white">
                        <tr class="text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                            <th class="px-5 py-3">Nombre</th>
                            <th class="px-5 py-3 text-center">Usuarios</th>
                            <th class="px-5 py-3 text-right">Acciones</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-200 bg-white">
                        @foreach (var role in Model)
                        {
                            var isAdmin = role.Name != null && role.Name.Equals("Administrador", StringComparison.OrdinalIgnoreCase);

                            <tr class="hover:bg-slate-50">
                                <td class="px-5 py-4">
                                    <div class="flex items-center gap-2">
                                        <span class="font-semibold text-slate-900">@role.Name</span>
                                        @if (isAdmin)
                                        {
                                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-semibold text-indigo-700 ring-1 ring-indigo-200">
                                                Protegido
                                            </span>
                                        }
                                    </div>
                                </td>

                                <td class="px-5 py-4 text-center">
                                    <span class="inline-flex items-center rounded-full bg-cyan-50 px-3 py-1 text-xs font-semibold text-cyan-700 ring-1 ring-cyan-200">
                                        @role.UsersCount
                                    </span>
                                </td>

                                <td class="px-5 py-4 text-right">
                                    <div class="inline-flex overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
                                        <a asp-action="Details" asp-route-id="@role.Id"
                                           class="px-3 py-2 text-sm text-slate-700 hover:bg-slate-50" title="Ver">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@role.Id"
                                           class="px-3 py-2 text-sm text-amber-700 hover:bg-amber-50" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="ManagePermissions" asp-route-id="@role.Id"
                                           class="px-3 py-2 text-sm text-slate-800 hover:bg-slate-100" title="Permisos">
                                            <i class="bi bi-key"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@role.Id"
                                           class="px-3 py-2 text-sm text-rose-700 hover:bg-rose-50" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
