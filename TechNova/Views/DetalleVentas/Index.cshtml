@model IEnumerable<TechNova.Models.DetalleVenta>
@{
    ViewData["Title"] = "Detalles de Ventas";
}

<div class="container mt-4">
    <h1>Historial de Detalles de Ventas</h1>
    <hr />

    <div class="alert alert-info" role="alert">
        <strong>Nota:</strong> Esta vista muestra todos los productos vendidos en cada venta.
        Para ver el desglose completo, vaya a la sección de <a asp-controller="Ventas" asp-action="Index" class="alert-link">Ventas</a>.
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Detalle</th>
                            <th>Venta #</th>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio Unit.</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.DetalleId</strong></td>
                                <td>
                                    <a asp-controller="Ventas" asp-action="Details" asp-route-id="@item.VentaId"
                                       class="badge bg-primary text-decoration-none">#@item.VentaId</a>
                                </td>
                                <td>
                                    <strong>@item.Producto.Nombre</strong><br />
                                    <small class="text-muted">@item.Producto.Descripcion</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success">@item.Cantidad</span>
                                </td>
                                <td class="text-end">@item.PrecioUnitario.ToString("C")</td>
                                <td class="text-end">
                                    <strong>@((item.Cantidad * item.PrecioUnitario).ToString("C"))</strong>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.DetalleId" class="btn btn-sm btn-info">
                                        Detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Ventas" asp-action="Index" class="btn btn-primary">
            Volver a Ventas
        </a>
    </div>
</div>