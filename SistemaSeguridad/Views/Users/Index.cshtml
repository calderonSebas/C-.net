@model IEnumerable<SistemaSeguridad.Models.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Gestión de usuarios";
}

<div class="mx-auto max-w-6xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Gestión de Usuarios</h1>
        <p class="mt-1 text-sm text-slate-600">Visualiza usuarios, sus roles y el estado de bloqueo.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-check2-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-exclamation-triangle"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        </div>
    }

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 bg-slate-50 px-5 py-4">
            <div class="flex items-center justify-between">
                <p class="text-sm font-semibold text-slate-800">Listado</p>
                <span class="text-xs text-slate-500">@Model.Count() usuario(s)</span>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="p-10 text-center">
                <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-2xl bg-slate-100">
                    <i class="bi bi-person-x text-slate-500 text-xl"></i>
                </div>
                <p class="text-sm text-slate-600">No hay usuarios registrados.</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-white">
                        <tr class="text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                            <th class="px-5 py-3">Correo</th>
                            <th class="px-5 py-3">Usuario</th>
                            <th class="px-5 py-3">Roles</th>
                            <th class="px-5 py-3 text-center">Bloqueado</th>
                            <th class="px-5 py-3 text-right">Acciones</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-200 bg-white">
                        @foreach (var user in Model)
                        {
                            var isAdmin = user.Roles != null && user.Roles.Any(r => r.Equals("Administrador", StringComparison.OrdinalIgnoreCase));

                            <tr class="hover:bg-slate-50">
                                <td class="px-5 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="flex h-9 w-9 items-center justify-center rounded-xl bg-cyan-50 ring-1 ring-cyan-200">
                                            <i class="bi bi-person text-cyan-700"></i>
                                        </div>
                                        <div>
                                            <div class="font-semibold text-slate-900">@user.Email</div>
                                            <div class="text-xs text-slate-500">Id: <span class="font-mono">@user.Id</span></div>
                                        </div>
                                    </div>
                                </td>

                                <td class="px-5 py-4 text-sm text-slate-700">@user.UserName</td>

                                <td class="px-5 py-4">
                                    @if (user.Roles == null || !user.Roles.Any())
                                    {
                                        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 ring-1 ring-slate-200">
                                            Sin roles
                                        </span>
                                    }
                                    else
                                    {
                                        <div class="flex flex-wrap gap-2">
                                            @foreach (var r in user.Roles)
                                            {
                                                var isRAdmin = r.Equals("Administrador", StringComparison.OrdinalIgnoreCase);
                                                <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold ring-1
                                                                    @(isRAdmin ? "bg-indigo-50 text-indigo-700 ring-indigo-200" : "bg-cyan-50 text-cyan-700 ring-cyan-200")">
                                                    @r
                                                </span>
                                            }
                                        </div>
                                    }

                                    @if (isAdmin)
                                    {
                                        <div class="mt-2">
                                            <span class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700 ring-1 ring-indigo-200">
                                                <i class="bi bi-shield-lock"></i> Protegido
                                            </span>
                                        </div>
                                    }
                                </td>

                                <td class="px-5 py-4 text-center">
                                    @if (user.IsLockedOut)
                                    {
                                        <span class="inline-flex items-center gap-1 rounded-full bg-rose-50 px-3 py-1 text-xs font-semibold text-rose-700 ring-1 ring-rose-200">
                                            <i class="bi bi-lock-fill"></i> Sí
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 ring-1 ring-emerald-200">
                                            <i class="bi bi-unlock"></i> No
                                        </span>
                                    }
                                </td>

                                <td class="px-5 py-4 text-right">
                                    <div class="inline-flex overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
                                        <a asp-action="Details" asp-route-id="@user.Id"
                                           class="px-3 py-2 text-sm text-slate-700 hover:bg-slate-50" title="Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a asp-action="ManageRoles" asp-route-id="@user.Id"
                                           class="px-3 py-2 text-sm @(isAdmin ? "text-slate-400 pointer-events-none" : "text-cyan-700 hover:bg-cyan-50")"
                                           title="Roles">
                                            <i class="bi bi-shield-lock"></i>
                                        </a>

                                        @if (user.IsLockedOut)
                                        {
                                            <form asp-action="Unlock" asp-route-id="@user.Id" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="px-3 py-2 text-sm @(isAdmin ? "text-slate-400 cursor-not-allowed" : "text-emerald-700 hover:bg-emerald-50")"
                                                        @(isAdmin ? "disabled" : "") title="Desbloquear">
                                                    <i class="bi bi-unlock"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Lock" asp-route-id="@user.Id" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="px-3 py-2 text-sm @(isAdmin ? "text-slate-400 cursor-not-allowed" : "text-rose-700 hover:bg-rose-50")"
                                                        @(isAdmin ? "disabled" : "") title="Bloquear">
                                                    <i class="bi bi-lock"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
