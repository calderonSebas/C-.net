@model IEnumerable<SistemaSeguridad.Models.Producto>
@{
    ViewData["Title"] = "Repuestos";
}

<div class="mx-auto max-w-6xl">
    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold tracking-tight text-slate-900">Repuestos</h1>
            <p class="mt-1 text-sm text-slate-600">Gestión de repuestos (controlado por permisos).</p>
        </div>

        @if (User.HasClaim("permission", SistemaSeguridad.Security.Permissions.Productos_Crear))
        {
            <a asp-action="Create"
               class="inline-flex items-center justify-center gap-2 rounded-xl bg-cyan-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-cyan-700">
                <i class="bi bi-plus-circle"></i>
                Nuevo repuesto
            </a>
        }
    </div>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 bg-slate-50 px-5 py-4">
            <div class="flex items-center justify-between">
                <p class="text-sm font-semibold text-slate-800">Listado</p>
                <span class="text-xs text-slate-500">@Model.Count() registro(s)</span>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="p-10 text-center">
                <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-2xl bg-slate-100">
                    <i class="bi bi-inboxes text-slate-500 text-xl"></i>
                </div>
                <p class="text-sm text-slate-600">No hay repuestos registrados.</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-white">
                        <tr class="text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                            <th class="px-5 py-3">Nombre</th>
                            <th class="px-5 py-3">Descripción</th>
                            <th class="px-5 py-3 text-right">Precio</th>
                            <th class="px-5 py-3 text-center">Activo</th>
                            <th class="px-5 py-3 text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 bg-white">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-50">
                                <td class="px-5 py-4">
                                    <div class="font-semibold text-slate-900">@item.Nombre</div>
                                </td>
                                <td class="px-5 py-4">
                                    <div class="text-sm text-slate-600 line-clamp-2">@item.Descripcion</div>
                                </td>
                                <td class="px-5 py-4 text-right font-semibold text-slate-900">
                                    @item.Precio.ToString("C")
                                </td>
                                <td class="px-5 py-4 text-center">
                                    @if (item.Activo)
                                    {
                                        <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 ring-1 ring-emerald-200">
                                            <i class="bi bi-check2-circle"></i> Sí
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 ring-1 ring-slate-200">
                                            <i class="bi bi-x-circle"></i> No
                                        </span>
                                    }
                                </td>
                                <td class="px-5 py-4 text-right">
                                    <div class="inline-flex overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="px-3 py-2 text-sm text-slate-700 hover:bg-slate-50" title="Ver">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (User.HasClaim("permission", SistemaSeguridad.Security.Permissions.Productos_Editar))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="px-3 py-2 text-sm text-amber-700 hover:bg-amber-50" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }

                                        @if (User.HasClaim("permission", SistemaSeguridad.Security.Permissions.Productos_Eliminar))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="px-3 py-2 text-sm text-rose-700 hover:bg-rose-50" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
