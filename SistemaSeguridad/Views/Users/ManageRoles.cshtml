@model SistemaSeguridad.Models.ViewModels.ManageUserRolesViewModel
@{
    ViewData["Title"] = "Gestionar roles del usuario";
    var isAdmin = Model.Roles != null && Model.Roles.Any(r =>
        r.RoleName.Equals("Administrador", StringComparison.OrdinalIgnoreCase) && r.IsSelected);
}

<div class="mx-auto max-w-6xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Gestionar roles del usuario</h1>
        <p class="mt-1 text-sm text-slate-600">Asigna o quita roles para controlar el acceso.</p>
    </div>

    @if (isAdmin)
    {
        <div class="mb-4 rounded-2xl border border-indigo-200 bg-indigo-50 px-4 py-3 text-sm text-indigo-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-shield-lock"></i>
                <span>Este usuario es <strong>Administrador</strong>. No se permite modificar sus roles.</span>
            </div>
        </div>
    }

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <div class="flex items-center gap-2">
                <i class="bi bi-shield-lock text-slate-700"></i>
                <div>
                    <p class="text-sm font-semibold text-slate-800">Roles</p>
                    <p class="text-xs text-slate-500">Selecciona los roles que tendrá el usuario.</p>
                </div>
            </div>
        </div>

        <div class="p-6">
            <div class="mb-5 rounded-2xl border border-slate-200 bg-white p-4">
                <div class="text-sm font-semibold text-slate-900">@Model.Email</div>
                <div class="mt-1 text-xs text-slate-500">
                    Usuario: @Model.UserName <br />
                    Id: <span class="font-mono">@Model.UserId</span>
                </div>
            </div>

            <form asp-action="ManageRoles" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />

                <div class="overflow-x-auto rounded-2xl border border-slate-200">
                    <table class="min-w-full divide-y divide-slate-200">
                        <thead class="bg-white">
                            <tr class="text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                                <th class="px-5 py-3">Rol</th>
                                <th class="px-5 py-3 text-center">Asignado</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200 bg-white">
                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                var roleName = Model.Roles[i].RoleName;
                                var roleIsAdmin = roleName.Equals("Administrador", StringComparison.OrdinalIgnoreCase);

                                <tr class="hover:bg-slate-50">
                                    <td class="px-5 py-4">
                                        <div class="flex items-center gap-2">
                                            <span class="font-semibold text-slate-900">@roleName</span>

                                            @if (roleIsAdmin)
                                            {
                                                <span class="inline-flex items-center rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-semibold text-indigo-700 ring-1 ring-indigo-200">
                                                    Protegido
                                                </span>
                                            }
                                        </div>

                                        <input type="hidden" asp-for="Roles[@i].RoleName" />
                                        <input type="hidden" asp-for="Roles[@i].RoleId" />
                                    </td>

                                    <td class="px-5 py-4 text-center">
                                        @* ✅ NO C# dentro de atributos del input tag helper *@
                                        @if (roleIsAdmin || isAdmin)
                                        {
                                            <input asp-for="Roles[@i].IsSelected"
                                                   class="h-4 w-4 rounded border-slate-300 text-cyan-600 focus:ring-cyan-200"
                                                   disabled="disabled" />
                                        }
                                        else
                                        {
                                            <input asp-for="Roles[@i].IsSelected"
                                                   class="h-4 w-4 rounded border-slate-300 text-cyan-600 focus:ring-cyan-200" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-5 flex items-center justify-end gap-2">
                    <a asp-action="Index"
                       class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                        Cancelar
                    </a>

                    @if (isAdmin)
                    {
                        <button type="submit"
                                class="rounded-xl bg-slate-200 px-4 py-2 text-sm font-semibold text-slate-500 cursor-not-allowed"
                                disabled="disabled">
                            <i class="bi bi-check2-circle me-1"></i> Guardar cambios
                        </button>
                    }
                    else
                    {
                        <button type="submit"
                                class="rounded-xl bg-cyan-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-cyan-700">
                            <i class="bi bi-check2-circle me-1"></i> Guardar cambios
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
