@{
    ViewData["Title"] = "Acceso denegado";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white py-4">
                    <i class="bi bi-x-octagon-fill fs-1"></i>
                    <h2 class="mt-2 mb-0 fw-bold">Acceso denegado</h2>
                </div>

                <div class="card-body py-4">
                    <p class="text-muted fs-5 mb-4">
                        No tienes permisos para acceder a esta sección del sistema.
                    </p>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-danger px-4">
                        <i class="bi bi-arrow-left-circle"></i> Volver al inicio
                    </a>
                </div>

                <div class="card-footer bg-light text-muted small">
                    Si crees que esto es un error, contacta a un administrador.
                </div>
            </div>

        </div>
    </div>
</div>
