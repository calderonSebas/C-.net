@model TechNova.Models.Venta
@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1><i class="bi bi-receipt"></i> Detalle de Venta #@Model.VentaId</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a Ventas
            </a>
        </div>
    </div>
    <hr />

    <!-- Información de la Venta -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="bi bi-info-circle"></i> Información General</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID Venta:</dt>
                        <dd class="col-sm-8"><strong>#@Model.VentaId</strong></dd>

                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8">@Model.FechaVenta.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Cliente:</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-person-fill"></i> @Model.Cliente.Nombre
                        </dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Cliente.Email</dd>

                        <dt class="col-sm-4">Teléfono:</dt>
                        <dd class="col-sm-8">@Model.Cliente.Telefono</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-cash-stack"></i> Resumen de Venta</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h2 class="display-4 text-success">@ViewBag.Total.ToString("C")</h2>
                        <p class="text-muted">Total de la Venta</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalle de Productos -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5><i class="bi bi-box-seam"></i> Productos Vendidos</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio Unitario</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.DetalleVenta)
                        {
                            <tr>
                                <td>
                                    <strong>@detalle.Producto.Nombre</strong><br />
                                    <small class="text-muted">@detalle.Producto.Descripcion</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@detalle.Cantidad</span>
                                </td>
                                <td class="text-end">@detalle.PrecioUnitario.ToString("C")</td>
                                <td class="text-end">
                                    <strong>@((detalle.Cantidad * detalle.PrecioUnitario).ToString("C"))</strong>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-end">
                                <h4 class="text-success mb-0">@ViewBag.Total.ToString("C")</h4>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Acciones -->
    <div class="mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model.VentaId" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar Venta
        </a>
        <a asp-action="Delete" asp-route-id="@Model.VentaId" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar Venta
        </a>
    </div>
</div>