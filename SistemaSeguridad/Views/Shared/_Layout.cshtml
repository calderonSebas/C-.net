@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SIGOT - @ViewData["Title"]</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>


    <!-- Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
</head>

<body class="bg-slate-100 text-slate-800">
    <div class="flex min-h-screen">

        <!-- SIDEBAR -->
        <aside id="sidebar"
               class="fixed inset-y-0 left-0 z-40 w-64 -translate-x-full bg-slate-900 text-slate-100 transition-transform lg:translate-x-0">
            <div class="flex h-full flex-col">

                <!-- LOGO -->
                <div class="flex items-center gap-3 px-6 py-5 border-b border-slate-800">
                    <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-cyan-500/20 ring-1 ring-cyan-400/30">
                        <i class="bi bi-diagram-3 text-cyan-400 text-lg"></i>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold tracking-tight">SIGOT</h1>
                        <p class="text-xs text-slate-400">Sistema de Gestión</p>
                    </div>
                </div>

                <!-- NAV -->
                <nav class="flex-1 px-4 py-4 space-y-1 text-sm">

                    <a asp-controller="Home" asp-action="Index"
                       class="flex items-center gap-3 rounded-xl px-3 py-2 hover:bg-slate-800">
                        <i class="bi bi-house-door"></i> Inicio
                    </a>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Productos" asp-action="Index"
                           class="flex items-center gap-3 rounded-xl px-3 py-2 hover:bg-slate-800">
                            <i class="bi bi-box-seam"></i> Repuestos
                        </a>


                    }

                    @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Administrador"))
                    {
                        <div class="mt-4">
                            <p class="px-3 py-2 text-xs uppercase tracking-wider text-slate-500">
                                Seguridad
                            </p>

                            <a asp-controller="Roles" asp-action="Index"
                               class="flex items-center gap-3 rounded-xl px-3 py-2 hover:bg-slate-800">
                                <i class="bi bi-shield-check"></i> Roles
                            </a>

                            <a asp-controller="Users" asp-action="Index"
                               class="flex items-center gap-3 rounded-xl px-3 py-2 hover:bg-slate-800">
                                <i class="bi bi-person-badge"></i> Usuarios
                            </a>
                        </div>
                    }
                </nav>

                <!-- USER -->
                <div class="border-t border-slate-800 px-4 py-4 text-sm">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="mb-3 text-slate-300">
                            <i class="bi bi-person-circle me-1"></i>
                            @User.Identity!.Name
                        </div>

                        <form asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home")"
                              method="post">
                            <button type="submit"
                                    class="w-full rounded-xl bg-slate-800 px-3 py-2 text-sm hover:bg-slate-700">
                                <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login"
                           class="block rounded-xl bg-cyan-600 px-3 py-2 text-center text-white hover:bg-cyan-700">
                            Iniciar sesión
                        </a>
                    }
                </div>
            </div>
        </aside>

        <!-- MAIN -->
        <div class="flex flex-1 flex-col lg:ml-64">

            <!-- TOPBAR (mobile) -->
            <header class="sticky top-0 z-30 flex items-center justify-between bg-white px-4 py-3 shadow lg:hidden">
                <button onclick="toggleSidebar()" class="text-slate-700">
                    <i class="bi bi-list text-2xl"></i>
                </button>
                <span class="font-semibold text-slate-700">SIGOT</span>
            </header>

            <!-- CONTENT -->
            <main class="flex-1 p-6">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="border-t bg-white px-6 py-3 text-xs text-slate-500">
                SIGOT © @DateTime.Now.Year — Sistema de Gestión Operativa
            </footer>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
