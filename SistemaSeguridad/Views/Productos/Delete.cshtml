@model SistemaSeguridad.Models.Producto
@{
    ViewData["Title"] = "Eliminar repuesto";
}

<div class="mx-auto max-w-2xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Eliminar repuesto</h1>
        <p class="mt-1 text-sm text-slate-600">Esta acción no se puede deshacer.</p>
    </div>

    <div class="rounded-2xl border border-rose-200 bg-white shadow-sm">
        <div class="border-b border-rose-200 bg-rose-50 px-6 py-4">
            <p class="text-sm font-semibold text-rose-800">Confirmación</p>
        </div>

        <div class="p-6">
            <div class="mb-4 rounded-xl border border-slate-200 bg-white p-4">
                <p class="text-sm text-slate-700">¿Seguro que deseas eliminar este repuesto?</p>
                <div class="mt-3 grid grid-cols-1 gap-3 sm:grid-cols-2">
                    <div>
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Html.DisplayNameFor(m => m.Nombre)</p>
                        <p class="text-sm font-semibold text-slate-900">@Model.Nombre</p>
                    </div>
                    <div class="sm:text-right">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Html.DisplayNameFor(m => m.Precio)</p>
                        <p class="text-sm font-semibold text-slate-900">@Model.Precio.ToString("C")</p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="flex items-center justify-end gap-2">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index"
                   class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                    Cancelar
                </a>

                <button type="submit"
                        class="rounded-xl bg-rose-600 px-4 py-2 text-sm font-semibold text-white hover:bg-rose-700">
                    Eliminar
                </button>
            </form>
        </div>
    </div>
</div>
