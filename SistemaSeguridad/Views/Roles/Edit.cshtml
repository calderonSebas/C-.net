@model SistemaSeguridad.Models.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "Editar rol";
    var isAdmin = Model?.Name != null && Model.Name.Equals("Administrador", StringComparison.OrdinalIgnoreCase);
}

<div class="mx-auto max-w-2xl">
    <div class="mb-6">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900">Editar rol</h1>
        <p class="mt-1 text-sm text-slate-600">Actualiza el nombre del rol.</p>
    </div>

    @if (isAdmin)
    {
        <div class="mb-4 rounded-2xl border border-indigo-200 bg-indigo-50 px-4 py-3 text-sm text-indigo-800">
            <div class="flex items-center gap-2">
                <i class="bi bi-shield-lock"></i>
                <span>Este rol es protegido. Evita modificarlo a menos que sea estrictamente necesario.</span>
            </div>
        </div>
    }

    <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <p class="text-sm font-semibold text-slate-800">Edición</p>
        </div>

        <div class="p-6">
            <form asp-action="Edit" method="post" class="space-y-5">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="rounded-xl bg-rose-50 p-3 text-sm text-rose-700"></div>

                <div>
                    <label asp-for="Name" class="mb-1 block text-sm font-semibold text-slate-700"></label>
                    <input asp-for="Name"
                           class="w-full rounded-xl border border-slate-300 bg-white px-3 py-2 text-sm outline-none focus:border-cyan-500 focus:ring-4 focus:ring-cyan-100" />
                    <span asp-validation-for="Name" class="mt-1 block text-xs text-rose-600"></span>
                </div>

                <div class="flex items-center justify-end gap-2 pt-2">
                    <a asp-action="Index"
                       class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                        Cancelar
                    </a>
                    <button type="submit"
                            class="rounded-xl bg-amber-500 px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-amber-400">
                        Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
